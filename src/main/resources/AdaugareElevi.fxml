<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.paint.Color?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" style="-fx-background-color: PEACHPUFF" hgap="10" prefHeight="400" prefWidth="600"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.CatalogVirtual.Controllers.AdaugareElevi">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="Introduceti numele elevului:" GridPane.columnIndex="0" textAlignment="CENTER" GridPane.columnSpan="2"
          GridPane.rowIndex="0"><font>
        <Font name="Bookman Old Style Bold Italic" size="24.0" />
    </font></Text>
    <effect>
        <InnerShadow>
            <color>
                <Color red="1.0" green="0.9870370626449585" blue="0.9870370626449585" />
            </color>
        </InnerShadow>
    </effect>


    <TextField fx:id="numeElev" GridPane.columnIndex="1" GridPane.rowIndex="1"><font>
        <Font name="System Bold" size="12.0" />
    </font></TextField>
    <Text fx:id="mesajAdaugare" GridPane.columnIndex="1" GridPane.rowIndex="2"><font>
        <Font name="System Bold" size="12.0" />
    </font></Text>
    <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button fx:id="AdaugareButon" prefHeight="40" prefWidth="200" style="-fx-background-color: BURLYWOOD; -fx-border-style: inset; -fx-border-style: outset; -fx-border-color: BLACK;" onAction="#handleAdaugareAction" text="Introducere Elev"><font>
            <Font name="System Bold" size="11.0" />
        </font></Button>
    </HBox>

    <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button fx:id="ButonInapoi" prefHeight="40" prefWidth="200" style="-fx-background-color: BURLYWOOD; -fx-border-style: inset; -fx-border-style: outset; -fx-border-color: BLACK;" onAction="#handleInapoiAction" text="Inapoi"><font>
            <Font name="System Bold" size="11.0" />
        </font></Button>
    </HBox>



</GridPane>
